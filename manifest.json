{
  "manifest_version": 3,
  "name": "Slime",
  "version": "1.0.0",
  "description": "Slime: A Chrome extension that fills form/input fields with custom rules and dynamic values",
  "permissions": ["storage", "activeTab", "scripting"],
  "icons": {
    "16": "icons/slime_logo_16.png",
    "32": "icons/slime_logo_32.png",
    "48": "icons/slime_logo_48.png",
    "128": "icons/slime_logo_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Slime",
    "default_icon": "icons/slime_logo.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"]
    }
  ]
}
